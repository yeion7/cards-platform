.header
  background-color: #2C1D3C;
  background-image: url('assets/fondo_estrellas.jpg')
  background-position: bottom
  background-repeat: no-repeat
  font-weight: bold

  &-container
    align-items: center
    box-shadow: 0 0 1px rgba(0,0,0,.15)
    display: flex
    height: 76px
    justify-content: space-between
    padding: 5px 15px
    position: relative

  &-menus
    display: flex

  &-logo
    height: 60px
    width: auto

    @media screen and (max-width: 768px)
      display: none

    &-responsive
      height: auto
      width: 60px

      @media screen and (min-width: 769px)
        display: none

  &-icon
    cursor: pointer
    font-size: 2em
    padding: .5em

  &-form
    align-items: center
    display flex
    justify-content: flex-end

  &-input
    background: white
    border: 0
    border-radius: 5px
    display: none
    font-size: 1em
    font-weight: bold
    line-height: 3em
    width: 50%

    &:focus
      outline-style: none

    @media screen and (min-width: 769px)
      width: 100%

  &-button
    background: transparent
    border: 0
    cursor: pointer
    font-size: 1em

    &:focus
      outline-style: none

  &-menu-responsive
    order: 1

    @media screen and (min-width: 769px)
      display: none

  &-nav
    display: none
    left: 0
    position: absolute
    top: 76px
    width: 100%
    z-index: 10000

    @media screen and (min-width: 769px)
      align-items: center
      display: flex
      position: static

.nav
  &-list
    align-items: center
    display: flex
    flex-direction: column
    justify-content: center

    @media screen and (min-width: 769px)
      flex-direction: row

  &-item
    text-align: center
    width: 100%

    & a
      cursor: pointer
      display: block
      font-weight: 600
      padding: 1em

      &:hover
        color: white
        background: $color-primary

      &:active
        color: $color-primary


.hero
  align-items: center
  display: flex
  font-weight: bold
  height: auto
  justify-content: center
  padding: 0 15px
  width: 100%

  &-text
    font-size: 2.5em
    font-weight: bold
    padding: 2em 0
    text-align: center
    width: 100%

    @media screen and (min-width: 769px)
      font-size: 3em
      padding: 2.5em 0
      width: 60%

.show
  display: block
